{
	"compilerOptions": {
		"lib": ["es2022"],
		"module": "commonjs",
		"target": "es2022",
		"outDir": "distribution",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"rootDir": "source",
		"baseUrl": "source",
		"paths": {
			"@library/*": ["library/*"],
			"@schemas/*": ["schemas/*"],
			"@handlers/*": ["handlers/*"]
		},
		"typeRoots": ["source/types", "node_modules/@types"],
		"removeComments": true
	},
	"exclude": ["node_modules", "distribution/**/*"],
	"include": ["source/**/*"]
}